<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/grayMain</item>
        <item name="colorPrimary">@color/grayMain</item>
        <item name="colorPrimaryDark">@color/grayMain</item>
        <item name="colorAccent">@color/whiteMain</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textColorHint">@color/graySecondary</item>
        <item name="editTextStyle">@style/darkEditTextStyle</item>
        <item name="android:textViewStyle">@style/darkTextViewStyle</item>
        <item name="android:windowEnterAnimation">@anim/fade_main_fragment</item>
        <item name="android:windowExitAnimation">@anim/fade_main_fragment_out</item>
    </style>

    <style name="darkEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>

    <style name="darkTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/graySecondary</item>
    </style>

    <style name="plusImageStyle">
        <item name="android:src">@drawable/img_dark_button</item>
        <item name="android:background">@null</item>
    </style>

    <style name="changeThemeImageStyle">
        <item name="android:src">@drawable/icon_light_mode</item>
    </style>

    <style name="emptyMainFragmentStyle">
        <item name="android:src">@drawable/img_main_frg_empty_dark</item>
    </style>

    <style name="mainFragmentItemStyle">
        <item name="android:background">@drawable/img_main_item_bg_dark</item>
    </style>

    <style name="splashScreenStyle">
        <item name="android:src">@drawable/img_splash_dark</item>
    </style>

    <style name="backButtonStyle">
        <item name="android:src">@drawable/icon_back</item>
    </style>

    <style name="lightWidgetButton">
        <item name="android:src">@drawable/icon_light_mode</item>
        <item name="android:background">@null</item>
    </style>

    <style name="darkWidgetButton">
        <item name="android:src">@drawable/icon_dark_mode_light</item>
        <item name="android:background">@null</item>
    </style>


</resources>