<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/main_bg</item>
        <item name="colorPrimary">@color/whiteMain</item>
        <item name="colorPrimaryDark">#33334d</item>
        <item name="colorAccent">@color/whiteText</item>
        <item name="android:fontFamily">@font/comforta</item>
        <item name="android:textColor">#33334d</item>
        <item name="android:textColorHint">#D8D8D8</item>
        <item name="editTextStyle">@style/darkEditTextStyle</item>
        <item name="android:textViewStyle">@style/darkTextViewStyle</item>
        <item name="android:windowEnterAnimation">@anim/fade_main_fragment</item>
        <item name="android:windowExitAnimation">@anim/fade_main_fragment_out</item>
    </style>

    <style name="darkEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>

    <style name="darkTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@null</item>
        <item name="android:textColor">#33334d</item>
    </style>

    <style name="plusImageStyle">
        <item name="android:src">@drawable/plus</item>
        <item name="android:background">@null</item>
    </style>

    <style name="changeThemeImageStyle">
        <item name="android:src">@drawable/icon_dark_mode</item>
    </style>

    <style name="emptyMainFragmentStyle">
        <item name="android:src">@drawable/img_main_frg_empty_light</item>
    </style>

    <style name="mainFragmentItemStyle">
        <item name="android:background">@drawable/img_main_item_bg_light</item>
    </style>

    <style name="splashScreenStyle">
        <item name="android:src">@drawable/img_checkdo_splash</item>
    </style>

    <style name="backButtonStyle">
        <item name="android:src">@drawable/icon_back</item>
    </style>
    
    <style name="deleteAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/img_main_item_bg_dark</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="my_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">70%</item>
    </style>

</resources>
