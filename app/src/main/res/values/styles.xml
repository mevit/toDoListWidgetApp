        <item name="android:background">@color/splashScreenBackground</item>
    </style>

    <style name="itemEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="toolBarSearchViewStyle" parent="AppTheme">
        <item name="android:textCursorDrawable">@color/mainGreen</item>
        <item name="searchIcon">@drawable/icon_search</item>
